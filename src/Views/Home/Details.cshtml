@model Car

<h2> @Model.Brand - @Model.Model </h2>

<link href="~/content/Details.css" rel="stylesheet" />

<div class="thumbnail">

    <div class="slideshow-container">
    <!-- Full-width images with number and caption text -->
    <div class="mySlides">
        <img src=../@Model.PictureURL style="width:100%">
    </div>
        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br />
    <!-- The dots/circles -->
    <div style="text-align:center">
       <span class="dot" onclick="currentSlide(1)"></span>
    </div>

    <div class="caption">
        <h2 class="pull-right">Cena: @Model.Price.ToString("c")</h2>
        <h3>Rok produkcji: @Model.YearOfProduction </h3>
        <h3> Przebieg: @Model.Milage </h3>
        <h3>Pojemność: @Model.Capacity </h3>

        @if (User.IsInRole("Admin"))
        {
            <div class="pull-right btn-group-vertical">
                <a asp-controller="Car" asp-action="Edit" asp-route-id="@Model.ID"> <input type="button" value="Edytuj ogłoszenie" class="btn btn-primary " /></a>

                <br />
                <br />
                <a><input type="button" id="delete-button" value="Usuń ogłoszenie" class="btn btn-primary col-md-12" /></a>
            </div>
        }
        <h3>Typ paliwa: @Model.FuelType </h3>
        <h3>
            Moc: @Model.Power
        </h3>

        <p class="text-justify caption"> @Model.Description </p>
    </div>

</div>

<script>

    $("#delete-button").click(function () {
        if (confirm("Are you sure you want to delete this?"))
        {
           window.location.href = "@Url.Action("Delete", "Car", new { id = Model.ID })";
        }
    });

</script>

<script>
    var slideIndex = 1;
    showSlides(slideIndex);

    // Next/previous controls
    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    // Thumbnail image controls
    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
    }
</script>