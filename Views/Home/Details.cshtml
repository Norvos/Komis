@model Car

<h2> @Model.Brand - @Model.Model </h2>

<div class="thumbnail">
    <img src="../@Model.PictureURL" style="width:750px;height:500px"/>
    <div class="caption">
        <h2 class="pull-right">Cena: @Model.Price</h2>
        <h3>Rok produkcji: @Model.YearOfProduction </h3>
        <h3> Przebieg: @Model.Milage </h3>
        <h3>Pojemność: @Model.Capacity </h3>
        <h3>
            Moc: @Model.Power

            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Car" asp-action="Edit" asp-route-id="@Model.ID"> <input type="button" value="Edytuj ogłoszenie" class="btn btn-primary pull-right" /></a>
            }

        </h3>

        <p class="text-justify"> @Model.Description </p>
        </div>


    </div>